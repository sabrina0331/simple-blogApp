<% include ./partials/header %>
<div class='ui main text container segment'>
    <div class='ui huge header'>Edit <%= editBlog.title %></div>
    <form class='ui form' action="/blogs/<%= editBlog._id %>?_method=PUT" method='POST'>
        <div class="field">
            <label>Title</label>
            <input type="text" name='blog[title]' value='<%= editBlog.title %>'>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name='blog[image]' value='<%= editBlog.image %>'>
        </div>
        <div class="field">
            <label>Comment</label>
            <textarea rows="5" name='blog[body]' ><%= editBlog.body %></textarea>
        </div>
        <button class='ui violet button' type='submit'>Update</button>
    </form>
</div>


<% include ./partials/footer %>